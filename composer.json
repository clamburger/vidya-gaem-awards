{
    "name": "vidya-gaem-awards/vidya-gaem-awards",
    "description": "Website for the Vidya Gaem Awards",
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "require": {
        "beberlei/doctrineextensions": "^1.1",
        "ehesp/steam-login": "^1.0.2",
        "fightbulc/moment": "^1.17.1",
        "knojector/steam-authentication-bundle": "^1.0",
        "koraktor/steam-condenser": "^1.3.10",
        "paragonie/random-lib": "^2.0.0",
        "sensio/framework-extra-bundle": "^5.2",
        "sensiolabs/ansi-to-html": "^1.1.3",
        "symfony/asset": "^4.1",
        "symfony/console": "^4.1",
        "symfony/css-selector": "^4.1",
        "symfony/dom-crawler": "^4.1",
        "symfony/flex": "^1.1",
        "symfony/form": "^4.1",
        "symfony/framework-bundle": "^4.1",
        "symfony/monolog-bundle": "^3.3",
        "symfony/orm-pack": "^1.0",
        "symfony/polyfill-apcu": "^1.0",
        "symfony/security-bundle": "^4.1",
        "symfony/serializer": "^4.1",
        "symfony/twig-bundle": "^4.1",
        "symfony/validator": "^4.1",
        "symfony/yaml": "^4.1",
        "tiben/crontab-manager": "~1.0",
        "twig/extensions": "^1.3.0"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "symfony/debug-pack": "^1.0",
        "symfony/dotenv": "^4.1",
        "symfony/maker-bundle": "^1.11",
        "symfony/phpunit-bridge": "^4.1.4",
        "symfony/profiler-pack": "^1.0"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "vendor/koraktor/steam-condenser/lib/steam-condenser.php"
        ]
    },
    "autoload-dev": {
        "psr-4": { "App\\Tests\\": "tests/" }
    },
    "extra": {
        "symfony": {
            "allow-contrib": "true",
            "require": "4.4.*"
        }
    }
}
